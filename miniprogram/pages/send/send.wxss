input {
  text-align: center;
  color: #000;
  font-weight: bold;
  margin-bottom: 10rpx;
}

textarea {
  width: 100%;
  padding: 20rpx 0;
  font-size: 30rpx;
  box-sizing: border-box;
  /* height: 500rpx; */
}
/* 预览图片 */

.img {
  display: flex;
  flex-wrap: wrap;
}

.img view {
  margin: 10rpx;
  width: 30%;
}

.img image {
  width: 100%;
  height: 200rpx;
}

/* 提交区域 */
.send {
  position: fixed;
  bottom: 0;
  width: 100%;
}

button {
  /* text-shadow: 0 0 5px aqua; */
  font-size: 18px;
  display: block;
  width: 100%;
  font-family: "华文新魏";
  color: rgb(49, 94, 71);

}
